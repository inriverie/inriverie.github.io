if use_forms

  // Rest margin
  form
    margin 0


  // Define consistent border, margin, and padding.
  fieldset
    border  0
    margin  0
    padding half_rhythm


  /**

    1. Correct `color` not being inherited in IE 8/9.
    2. Remove padding so people aren't caught out if they zero out fieldsets.

  **/
  legend
    border  0 // [1]
    padding 0 // [2]


  .label
    display     block
    line-height leading


    /**

      Extra help text in `label`s, e.g.:
      label Card number <small class='additional'>No spaces</small>

    **/
    .additional
      font-weight normal


  label
    cursor  pointer
    @extends .label


  /**

    Instead of a `[type]` selector for each kind of form input, we just use a class to target any/every one, e.g.:

  **/
  .input--txt
    // foo bar


  /**

    1. Remove excess padding in IE 8/9.

  **/
  input[type="checkbox"],
  input[type="radio"]
    margin-right  0.25em

    if legacy_support
      padding     0 // [1]


  /**

    1. Prevents Webkit from locking `font-size`.
    Put `select` icon back with dropdown.svg

  **/
  select
    -webkit-appearance  button // [1]


  /**

    1. Chrome, Safari
    2. Firefox 19
    3. IE 10

  **/
  ::-webkit-input-placeholder
    // [1]
  ::-moz-placeholder
    // [2]
  :-ms-input-placeholder
    // [3]

  :focus::-webkit-input-placeholder
    // [1]
  :focus::-moz-placeholder
    // [2]
  :focus:-ms-input-placeholder
    // [3]


  /**

    fieldset
      .form-field
        label
        input.input--txt
      .form-field
        label
        select
      .form-field
        label
        input.input--txt

  **/
  .form-field
    @extends .rhythm-bottom


    &:last-child
      margin-bottom 0


  /**

     ul.check-list
       li
         input
         label
       li
         input
         label

  **/
  .check-list
    list-style  none
    margin      0


  // Labels in check-lists
  .check-label,
  .check-list label,
  .check-list .label
    display inline-block


  if spoken_word
    /**

      p.spoken-form
        Hello, my 
        label(for='spoken-name') name
        is
        input#spoken-name.text-input(type='text')
        My home
        label(for='country') country
        is
        select#country
          option UK
          option US
          option Other

    **/
    .spoken-form label
      display inline-block
      font    inherit


  if input_captions
    /**
      Extra help text displayed after a field when that field is in focus, e.g.:

      label(for='email') Email
      input#email.text-input(type='email')
      small.extra-help .edu emails only

      We leave the help text in the document flow and merely set it to `visibility:hidden;`. This means that it wonâ€™t interfere with anything once it reappears.

    **/
    .extra-help
      display     inline-block
      visibility  hidden

    .input--txt:active + .extra-help,
    .input--txt:focus + .extra-help
      visibility  visibile
