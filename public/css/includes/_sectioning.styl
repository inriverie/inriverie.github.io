/*------------------------------------*\
    HEADINGS
\*------------------------------------*/
$hN
  unless display_family == text_family
    font-family display_family
  margin  0


h1,.alpha
  set-font-size(ms6)
  @extends $hN

h2,.beta
  set-font-size(ms5)
  @extends $hN

h3,.gamma
  set-font-size(ms4)
  @extends $hN

h4,.delta
  set-font-size(ms3)
  @extends $hN

h5,.epsilon
  set-font-size(ms2)
  @extends $hN

h6,.zeta
  set-font-size(ms1)
  @extends $hN


if massive_headings
  .giga
    set-font-size(ms9)
    @extends $hN

  .mega
    set-font-size(ms8)
    @extends $hN

  .kilo
    set-font-size(ms7)
    @extends $hN





