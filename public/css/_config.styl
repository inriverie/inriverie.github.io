/*------------------------------------*\
    TYPOGRAPHY
\*------------------------------------*/
font_size         = 14
line_height       = 21

leading           = line_height / font_size

display_family    = georgia

text_color        = hsl(0, 0%, 27%)
text_family       = verdana
text_size         = (font_size / 16) rem


/**

  Ligature and kerning enhancement
  Options: 'global', 'headings', null

**/
font_enhancement  = null


// >> http://modularscale.com/
ms7   = round(67.5)
ms6   = round(54)
ms5   = round(45)
ms4   = round(36)
ms3   = round(30)
ms2   = round(24)
ms1   = round(20)
ms0   = round(16)
ms_1  = round(13.333)
ms_2  = round(10.667)
ms_3  = round(8.889)


giga_size = ms7
mega_size = ms6
kilo_size = ms5

h1_size = ms4
h2_size = ms3
h3_size = ms2
h4_size = ms1
h5_size = ms0
h6_size = ms_1

milli_size  = ms_2
micro_size  = ms_3





/*------------------------------------*\
    LAYOUT
\*------------------------------------*/

rhythm            = leading * 1rem
double_rhythm     = (rhythm * 2) * 1rem
half_rhythm       = (rhythm / 2) * 1rem
quarter-rhythm    = (rhythm / 4) * 1rem





/*------------------------------------*\
    TEXTURE
\*------------------------------------*/

bg_color    = hsl(0, 0%, 100%)
code_color  = hsl(344, 100%, 37%)
ui_color    = hsl(0, 0%, 81%)

brand_color   = hsl(344, 100%, 37%)
brand_family  = text_family


// Breadcrumbs
breadcrumb_type = normal


// Horizonal rule
rules_border_color  = ui_color
rules_border_style  = solid
rules_border_width  = 1px


// Text color
caption_color   = hsl(0, 0%, 35%)
link_color      = hsl(224, 73%, 50%)
selection_color = hsl(0, 0%, 100%)


// Table stripes
table_stripes   = lighten(ui_color, 15%)





/*------------------------------------*\
    TOGGLES
\*------------------------------------*/

test_mode  = true


use_blockquotes = false
use_code        = false
use_edits       = false
use_figure      = false
use_forms       = false
use_media       = false
use_pre         = false
use_rules       = false
use_tables      = false


legacy_support  = false


massive_headings  = false


print_serif       = false


// Decorative horizontal rules
rules_ornament        = false
rules_ornament_border = false


selection_highlight = true


// Form extensions
input_captions  = false
spoken_word     = false
