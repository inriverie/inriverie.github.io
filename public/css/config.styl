/*------------------------------------*\
  TYPOGRAPHY
\*------------------------------------*/
@import 'typography'


display_typeface= georgia
text_typeface   = verdana


text_size   = 16px
leading     = 24px
line_height = remove-unit(leading / text_size)


modular_scale_ratio = minor_third
important_number    = undefined


print_type  = 'sans'





/*------------------------------------*\
  COLOR
\*------------------------------------*/
brand_color = hsl(224, 73%, 50%)


text_color      = hsl(0, 0%, 27%)
link_color      = brand_color
selection_color = hsla(0, 0%, 0%, .2)


background_color= hsl(0, 0%, 96%)
border_color    = hsl(0, 0%, 84%)





/*------------------------------------*\
  IMPORTS
\*------------------------------------*/
@import 'mixins'
@import 'document'
