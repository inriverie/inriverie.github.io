@import 'document'


// GLOBAL HEADER
[role='banner']
  background-color  hsla(0,0%,100%,.5)
  box-shadow        small_shadow
  padding           8px


// BRANDING
.brand
  font-size       17px
  font-weight     600
  margin          0
  text-align      center

  &--role
    display     block
    font-size   15px
    font-weight 400
    line-height 16px
    opacity     .62





// NAVIGATION
[role='navigation']
  display         flex
  justify-content center
  margin          0 auto
  max-width       1280px

  @media (max-width: 821px)
    flex-wrap wrap

  @media (min-width: 821px)
    margin-top  22vh

  a[href]
    display         block
    max-width       411px
    padding         16px 8px
    text-decoration none

  img
    box-shadow  small_shadow





// HEADINGS
.project
  display         flex
  color           grey_500
  flex-direction  column
  padding         24px 0 8px
  margin          0

  &--name
    font-size   24px
    font-weight 400

  &--company
    color   #7397BA
    order   -1

  &--role
    font-size 15px

  dd
    margin  0





