/*------------------------------------*\
  VARIABLES
\*------------------------------------*/
text_bg_color = #EBEEF1
grey_500 = #616161

small_shadow = hsla(0,0%,0%,.1) 0 2px 4px





/*------------------------------------*\
  DOCUMENT
\*------------------------------------*/
*
  box-sizing border-box


html
  background-color  #CED7E2
  background-size   cover
  color             grey_500
  font-size         17px
  font-family       -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Fira Sans', sans-serif
  line-height       24px

  -ms-text-size-adjust  100%
  -webkit-text-size-adjust  100%


:lang(en) q
  quotes  '\2018' '\2019' '\201C' '\201D'
  &::before
    content  open-quote
  &::after
    content  close-quote
  q::before
    content  open-quote
  q::after
    content  close-quote


body
  margin  0


main
  display     block // [1] IE 11
  text-align  center


b,
strong
  font-weight 700 // [2] Address style set to `bolder` in Firefox 4+, Safari 5, and Chrome.
