/*------------------------------------*\
  VARIABLES
\*------------------------------------*/
couture_gold = #BAAD73

zappos_blue = #7397BA

dark_grey = #4A4A4A
mid-grey = #8F8F8F
soft-grey = #e6e6e6
light_grey = #F7F7F7


// defaults
h1_text_size = 21px
h1_font_weight = 400

role_text_color = zappos_blue




/*------------------------------------*\
  DOCUMENT
\*------------------------------------*/
*
  box-sizing border-box


html
  background-color light_grey
  color mid-grey
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Fira Sans', sans-serif
  font-size 15px
  line-height 24px

  -ms-text-size-adjust      100%
  -webkit-text-size-adjust  100%


:lang(en) q
  quotes  '\2018' '\2019' '\201C' '\201D'
  &::before
    content  open-quote
  &::after
    content  close-quote
  q::before
    content  open-quote
  q::after
    content  close-quote


body
  margin  0


b,
strong
  font-weight 700
