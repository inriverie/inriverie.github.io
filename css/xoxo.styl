@import 'document.styl'


html
  background-color: #FCFCFC
  color #8F8F8F
  text-align center


header
  background-color #f7f7f7
  padding 48px 0


h1
  font-size 21px
  font-weight 400
  line-height 24px
  margin 0 0 24px

  span
    color #7397BA
    display block
    font-size 15px
    margin-top 8px


dl
  font-size 13px
  line-height 16px
  margin 0 0 24px

dt
  font-weight 500

dd
  margin 0


p
  border-top 1px solid #e6e6e6
  font-size 15px
  line-height 24px
  margin 0 6.4vw
  padding 24px 3.2vw 0
  max-width 487px

  @media screen and (min-width:500px)
    margin 24px auto 0
    padding 24px 24px 0


figure
  margin 0
  padding 12.8vw 6.4vw
  text-align center

  &:nth-of-type(2n)
    background-color white
    border 1px solid #e6e6e6
    border-left none
    border-right none

  &:last-of-type
    background-color #f7f7f7
    border 1px solid #e6e6e6
    border-left none
    border-right none

  @media screen and (min-width:750px)
    padding 96px


img
  max-width 1024px
  width 100%


video
  box-shadow 0px 2px 4px 0px rgba(0,0,0,0.24);
  max-width 375px
  width 100%
