h2
  font-size h2_text_size
  font-weight 200
  line-height 32px
  margin 0
  padding-top 48px
  text-align center

  & + figure
    padding 32px 6.4vw 12.8vw

    @media screen and (min-width:750px)
      padding 32px 48px 96px

  & + p
    padding-top 24px





figure
  margin 0
  text-align center

  & + figure
    padding 12.8vw 6.4vw

    @media screen and (min-width:750px)
      padding 96px 48px





[width='1024px']
  max-width 1024px
  width 100%



.dark_gradient
  background-image linear-gradient(-180deg, alpha(#000000, .13) 0%, alpha(#000000, 0) 88px)
  // border none

.light_gradient
  background-image linear-gradient(-180deg, alpha(soft-grey, .13) 0%, alpha(soft-grey, 0) 88px)
  border-top 1px solid soft-grey
