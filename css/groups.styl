h2
  font-size h2_text_size
  font-weight 200
  line-height 32px
  margin 0
  padding-top 48px
  text-align center

  & + figure
    padding 32px 6.4vw 12.8vw

    @media screen and (min-width:750px)
      padding 32px 48px 96px

  & + p
    margin 0 auto
    padding-top 24px
    text-align center
    max-width 564px





figure
  margin 0
  padding 12.8vw 6.4vw
  text-align center

  @media screen and (min-width:750px)
    padding 96px 48px




[width='375px']
  max-width 375px
  width 100%


[width='1024px']
  max-width 1024px
  width 100%





.dark-gradient
  background-image linear-gradient(-180deg, alpha(#000000, .13) 0%, alpha(#000000, 0) 88px)


.light-gradient
  background-image linear-gradient(-180deg, alpha(soft_grey, .13) 0%, alpha(soft_grey, 0) 88px)
  border-top 1px solid soft_grey


.border-light
  border 2px solid soft_grey
